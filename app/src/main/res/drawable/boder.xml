<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền của TextView (có thể để trống nếu không cần) -->

    <!-- Định nghĩa viền -->
    <stroke
        android:width="1dp"
        android:color="#696969"/>

    <!-- Bo tròn các góc (tuỳ chọn) -->
    <corners android:radius="8dp" />

    <!-- Đệm nội dung bên trong (tuỳ chọn) -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>